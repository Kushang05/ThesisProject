@model IEnumerable<ThesisProj.ViewModels.FacultyListViewModel>

@{
    ViewData["Title"] = "List of Faculties";
}

<h1>@ViewData["Title"]</h1>

<p>
    <a class="btn btn-dark" asp-area="Identity" asp-page="/Account/RegisterFaculty">Add Faculty</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FacultyId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DisplayName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RolesOfUser)
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FacultyId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DisplayName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>       
              <td>
                @String.Join(", ", item.RolesOfUser)
            </td>
        </tr>
}
    </tbody>
</table>
